<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
   <entry key="insertPerson">
       INSERT INTO EMPLOYEE (
                                EMP_ID
                                ,EMP_NAME
                                ,EMP_NO
       ,JOB_CODE
       ,SAL_LEVEL
                                          )
       VALUES (?
              ,?
              ,?
       ,?
       ,?
                )
   </entry>

       <entry key="updatePerson">
           UPDATE EMPLOYEE
               SET EMP_NAME = ?
                   ,EMP_NO = ?
            WHERE EMP_ID = ?
       </entry>

    <entry key="deletePerson">
        DELETE
          FROM EMPLOYEE
        WHERE EMP_ID = ?
    </entry>

    <entry key="selectPerson">
        SELECT E.*
        FROM EMPLOYEE E
        WHERE E.EMP_ID = ?
    </entry>


    </properties>